<div class='row'>
	<div class='span12'>
		<% if flash[:notice] %>
		    <div id="notice" class="alert alert-error"><%= flash[:notice] %></div>
		<% end %>
	</div>
</div>

<div class='row'>
	<div class='span6'>
		<h2>Sign Up</h2>
		<%= form_for @user, url: { action: :signup } do |f| %>
		  <%= f.email_field :email, placeholder: 'Email' %> <br />
		  <%= f.password_field :password, placeholder: 'Password'  %> <br />
		  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %> <br />
		  <%= f.text_field :access_key_id, placeholder: 'AWS Access Key' %> <br />
		  <%= f.text_field :secret_access_key, placeholder: 'AWS Secret Key'  %> <br />
		  <%= f.submit 'Sign Up' %>
		<% end %>
	</div>
	<div class='span6'>
		<h2>Login</h2>
		<%= form_for @user, url: { action: :login } do |f| %>
		  <%= f.email_field :email, placeholder: 'Email' %> <br />
		  <%= f.password_field :password, placeholder: 'Password' %> <br />
		  <%= f.submit 'Login' %>
		<% end %>
	</div>
</div>