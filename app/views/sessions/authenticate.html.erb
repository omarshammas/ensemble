<div class='row'>
	<div class='span12'>
		<% if flash[:notice] %>
		    <div id="notice" class="alert alert-error"><%= flash[:notice] %></div>
		<% end %>
	</div>
</div>

<div class='row'>
	<div class='span6'>
		<h2>Sign Up</h2>
		<%= form_for @user, url: { action: :signup } do |f| %>
		  <%= f.email_field :email, placeholder: 'Email' %> <br />
		  <%= f.password_field :password, placeholder: 'Password'  %> <br />
		  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %> <br />
		  <%= f.telephone_field :phone_number, placeholder: 'Phone Number'%> <br />
		  <span class='help-block'>Please include country code e.g. +16667779999</span>					
		  <%= f.submit 'Sign Up' %>
		<% end %>
	</div>
	<div class='span6'>
		<h2>Login</h2>
		<%= form_for @user, url: { action: :login } do |f| %>
		  <%= f.email_field :email, placeholder: 'Email' %> <br />
		  <%= f.password_field :password, placeholder: 'Password' %> <br />
		  <%= f.submit 'Login' %>
		<% end %>
	</div>
</div>