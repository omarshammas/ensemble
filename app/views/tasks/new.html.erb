
<%= form_for @task, :url => user_tasks_path, :html => { :multipart => true } do |form| %>
	<fieldset>
		<legend>
			New Request
		</legend>
		<br/><br/>
		<label>Upload image of your desired article of clothing</label>
		<input class = "span5" id="task_image" name="task[image]" type="file" />
		<br/></br>
		<label>Description</label>
  		<textarea class="span4" rows="3"  name="task[body]" placeholder="Enter any other details e.g. I want the following in red"></textarea>
		<input type="hidden" name="task[user_id]" value= "<%=current_user.id%>" />
		</br>
		<button type="submit" class="btn btn-primary">
			Submit
		</button>
	</fieldset>
<% end %>
